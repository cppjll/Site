---
import { Image } from "astro:assets";
const {member} = Astro.props;
---

<div class="card w-full shadow-2xl mb-6">
    <!-- The height/width here are arbitrary, figure out later -->
    <figure class="bg-secondary" ><Image transition:name={member.data.name} src={member.data.image.src} alt={member.data.image.alt} width=300 height=300 class="rounded-full my-4 w-36" /></figure>
    <div class="card-body">
        <h1 class="text-3xl font-bold font-display text-accent mx-auto">{member.data.name}</h1>
        <h2 class="text-xl text-accent mb-2 mx-auto">{member.data.position}</h2>
        <p class="text-lg font-body text-accent mb-2 mx-auto">{member.data.bio}</p>
    </div>
</div>