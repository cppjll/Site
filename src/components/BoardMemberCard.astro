---
import { Image } from "astro:assets";
const {member} = Astro.props;
---
<a href=`https://cpp-jll.com/board/#${member.slug}` class="flex items-center w-full h-48 rounded-xl bg-secondary mb-4 hover:scale-[1.02] transition-all md:max-w-3xl md:mx-auto">
    <div class="grid grid-cols-2 w-full h-full items-center">
        <div class='flex ml-6 w-36'>
            <Image src={member.data.image} alt={member.data.imageAlt} class='rounded-full z-10' />
        </div>
        <div class="text-right mr-6" >
            <h1 class="text-3xl text-foreground font-display font-bold">{member.data.name}</h1>
            <p class="text-lg text-foreground">{member.data.position}</p>
        </div>
    </div>
</a>