---
import logo from '../images/bun.png'
import { Image } from 'astro:assets';
---

<div class='fixed z-10 top-0 w-screen bg-secondary-focus'>
    <div class='navbar md:max-w-4xl mx-auto bg-secondary-focus'>
        {/* The left of the navbar, has hamburger menu on mobile, logo and pages on desktop */}
        <div class='navbar-start'>
            <div class='hidden md:flex'>
                <a href="/" class="btn btn-ghost normal-case text-xl text-accent hover:scale-[1.05] justify-center"><Image src={logo} alt="logo" class="w-7 mx-2"></Image>CPP JLL</a>
            </div>
        </div>
        {/* The center of the navbar, has logo on mobile, nothing on desktop */}
        <div class='navbar-center md:hidden'>   
            <a href="/" class="btn btn-ghost normal-case text-xl text-accent mx-3 pr-8"><Image src={logo} alt="logo" class="w-7 mr-3"></Image>CPP JLL</a>
        </div>
        {/* The right of the navbar, has dropdown menu on mobile, text on desktop */}
        <div class='navbar-end'>
            <ul class='hidden md:flex menu menu-horizontal px-2 text-accent'>
                <li><a class="text-nv hover:text-green-100" href="/events">Events</a></li>
                <li><a class="text-nv hover:text-green-100" href="/board">Board</a></li>
            </ul>   
            <details class='dropdown pr-3'>
                <summary tabindex={0} class='btn btn-ghost md:hidden'>
                    {/* Menu bar thing */}
                    <svg class='w-6 h-6' xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                </summary>
                <ul tabindex={0} class='menu menu-sm dropdown-content right-0 items-end mt-3 z-[1] p-2 bg-slate-100 text-accent rounded-box w-auto pr-4'>
                    <li><a class="my-1 hover:text-green-100" href="/events">Events</a></li>
                    <li><a class="my-1 hover:text-green-100" href="/board">Board</a></li>
                </ul>
            </details> 
        </div>
    </div>
</div>