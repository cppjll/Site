---
import '../global.css';
import Navbar from '../components/Navbar';
import { Image } from 'astro:assets';
import icon from "/favicon.ico";
import { ViewTransitions } from 'astro:transitions';
import { slide } from 'astro:transitions';
const {frontmatter} = Astro.props;
---
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" href={icon} type="image/x-icon" />
        <title>{frontmatter.title} - CPP Japanese Language Learners</title>
        <ViewTransitions />
    </head>
    <body >
        <div>
            <Navbar />
        </div> 
        <div class="flex flex-col mt-4 mb-6 mx-6">    
            <h1 transition:animate={slide ({ duration: '0.3s' })} class="text-4xl font-bold text-accent mb-4 font-display">{frontmatter.title}</h1>
            <Image transition:animate={slide ({ duration: '0.4s' })} src={frontmatter.image.src} alt={frontmatter.image.alt} width=905 height=905 class="rounded-xl" />
            <article transition:animate={slide ({ duration: '0.5s' })} class="prose mt-4">
                <slot />
            </article>
        </div>
    </body>
</html>